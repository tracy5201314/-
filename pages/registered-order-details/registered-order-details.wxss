page{
  height: 100%;
  background-color: #f7f7f7;
}
.register-order-details{
  padding: 30rpx;
}
/* 二维码 */
.qr-code{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  margin-bottom: 30rpx;
  height: 100rpx;
	background-color: #ffffff;
	border-radius: 14rpx;
}
.qr-code image{
  width: 45rpx;
  height: 45rpx;
}
.qr-code text{
  padding-left: 20rpx;
  font-size: 26rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0rpx;
	color: #666666;
}

/* 状态 */
.state{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
	height: 238rpx;
	background-color: #e0efff;
	border-radius: 12rpx 12rpx 0px 0px;
}
.state view{
  margin: 34rpx 0 10rpx;
  font-size: 24rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0px;
	color: #999999;
}
.state view:first-child{
  margin: 0;
  font-size: 42rpx;
	font-weight: 700;
	color: #1e7df7;
}
.state view:last-child{
  margin: 0;
  font-size: 42rpx;
	font-weight: 700;
	color: #333;
}

/* msg-item */
.msg-item{
  display: flex;
  flex-direction: row;  
}
.msg-item view{
  width: 160rpx;
  font-size: 28rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 72rpx;
	letter-spacing: 0rpx;
	color: #999999;
}
.msg-item view:last-child{
  flex: 1;
  color: #333;
}
.msg-item view.time{
  color: #ff9b24;
}

/* 挂号信息 */
.register-msg{
  padding: 26rpx 20rpx 16rpx;
  background-color: #ffffff;
	border-radius: 0rpx 0rpx 14rpx 14rpx;
}

/* 病人信息 */
.patient-msg{
  padding: 16rpx 20rpx;
  margin: 30rpx 0;
  background-color: #ffffff;
	border-radius: 14rpx;
}

/* 支付信息 */
.pay-msg{
  padding: 16rpx 20rpx 0;
  background-color: #ffffff;
	border-radius: 14rpx;
}
.pay-msg .total-cost{
  margin-top: 16rpx;
  padding: 32rpx 18rpx 36rpx 0;
  border-top: 1rpx solid #eee;
  text-align: right;
  font-size: 32rpx;
	font-weight: 400;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #333333;
}
.pay-msg .total-cost text{
  color: #ff9b24;
}

/*按钮*/
.btn{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 56rpx;
  margin-bottom: 42rpx;
}
.btn button{
  margin: 0;
  padding: 0;
  width: 288rpx;
	height: 82rpx;
  border: none;
  border-radius: 41rpx;
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 82rpx;
	letter-spacing: 0rpx;	
}
.btn button::after{
  border: none;
}
.btn .btn-pay{
  background-image: linear-gradient(-90deg, #3a6fff 0%, #52a3ff 100%);
	box-shadow: 0rpx 3rpx 24rpx 0rpx rgba(59, 114, 255, 0.36);
  color: #ffffff;
}
.btn .btn-medical{
  margin-right: 28rpx;
  background-color: #ffffff;
	box-shadow: 0rpx 3rpx 16rpx 0rpx rgba(197, 197, 197, 0.2);
  color: #333333;
}
.btn .btn-retreat{
  background-image: linear-gradient(-90deg, #fd6d49 0%, #fcb9a8 100%);
	box-shadow: 0rpx 3rpx 24rpx 0rpx rgba(253, 114, 79, 0.36);
  color: #fff;
}