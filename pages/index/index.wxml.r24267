        <!-- 确认打卡 -->
        <swiper class='index-infobox-swiper' autoplay="true" vertical="true">
          <swiper-item class='index-infobox-swiperitem'>
            <view class='index-infobox'>
              <view class='index-infobox-title'>消息</view>
              <view class='index-infobox-subtitle'>2019年06月25日西南医院停诊2019年06月25日西南医院停诊</view>
