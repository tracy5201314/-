  <view class='index-menu'>
    <image class='index-menu-bgimg' src='../../images/home-menu-bg.png'></image>
    <view class='index-menu-mbox'>
      <view class='index-menu-list'>
        <view class='index-menu-item'>
          <image src='../../images/home-menu-01.png'></image>
          <text>预约挂号</text>
        </view>
        <view class='index-menu-item'>
          <image src='../../images/home-menu-02.png'></image>
          <text>图文咨询</text>
        </view>
        <view class='index-menu-item'>
          <image src='../../images/home-menu-03.png'></image>
          <text>电话咨询</text>
        </view>
        <view class='index-menu-item' catchtap='toBaodao'>
          <image src='../../images/home-menu-04.png'></image>
          <text>诊后报道</text>
        </view>
      </view>
    </view>
  </view>
  <view class='index-pdsize'>
