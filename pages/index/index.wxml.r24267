          </swiper-item>
          <swiper-item class='index-infobox-swiperitem'>
            <view class='index-infobox'>
              <view class='index-infobox-title'>消息</view>
              <view class='index-infobox-subtitle'>2019年06月25日西南医院停诊2019年06月25日西南医院停诊</view>
              <view class='index-infobox-btnbox'>
                <view class='index-infobox-btn blue' hover-class="active" hover="true">确认打卡</view>
              </view>
            </view>
          </swiper-item>
        </swiper>
        <!-- 已打卡 -->
        <swiper style='margin-top:10rpx;' class='index-infobox-swiper' autoplay="true" vertical="true">
          <swiper-item class='index-infobox-swiperitem'>
            <view class='index-infobox'>
              <view class='index-infobox-title'>消息</view>
              <view class='index-infobox-subtitle'>2019年06月25日西南医院停诊2019年06月25日西南医院停诊</view>
