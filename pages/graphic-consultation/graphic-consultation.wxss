page{
  height: 100%;
  background-color: #f7f7f7;
}
.graphic-consultation{
  padding: 30rpx;
}
.service-intro{
  padding: 12rpx 40rpx 36rpx 24rpx;
  background-color: #fff;
  border-radius: 14rpx;
}
.service-intro .title{
  margin-top: 24rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
	font-weight: 700;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0rpx;
	color: #333333;
}
.service-intro .title.ft-28{
  font-size: 28rpx;
}
.service-intro text{
  display: block;
  position: relative;
  padding-left: 36rpx;
  font-size: 28rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 52rpx;
	letter-spacing: 0rpx;
	color: #333333;
}
.service-intro text::after{
  content: "";
  position: absolute;
  left: 0;
  top: 18rpx;
  width: 16rpx;
	height: 16rpx;
  border-radius: 50%;
	background-color: #1e7df7;
	opacity: 0.59;
}

.patient-msg{
  margin-top: 30rpx;
  padding: 0 20rpx;
  background-color: #ffffff;
	border-radius: 14rpx;
}
.patient-msg .patient-name{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  font-size: 28rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 100rpx;
	letter-spacing: 0rpx;
	color: #999999;
}
.patient-msg .patient-name text:last-child{
  position: relative;
  padding-right: 36rpx;
  color: #333;
}

.left-arrow{
  position: relative;
}
.left-arrow:before,.left-arrow:after{
  position: absolute;
  content: '';
  top: 50%;
  transform: translate(0,-50%);
  border-top: 8px transparent dashed;
  border-bottom: 8px transparent dashed;
  border-right: 8px transparent dashed;
  border-left: 8px #fff solid;
}
.left-arrow:before{
  right: -7px;
  border-left: 8px #666666 solid;
}
.left-arrow:after{
  right: -6px; /*覆盖并错开1px*/
  border-left: 8px #fff solid;
}


.patient-msg .illness-state{
  position: relative;
  padding: 24rpx 4rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 48rpx;
	letter-spacing: 0rpx;
	color: #bbbbbb;
}
.patient-msg .illness-state .textarea{
  padding-bottom: 48rpx;
  width: 100%;
  height: 340rpx;
  font-size: 28rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 48rpx;
	letter-spacing: 0rpx;
	color: #bbbbbb;  
}
.patient-msg .illness-state text{
  position: absolute;
  bottom: 24rpx;
  right: 4rpx;
   font-size: 28rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 48rpx;
	letter-spacing: 0rpx;
	color: #bbbbbb; 
}
.patient-msg .illness-img{
  padding: 24rpx 5rpx;
}
.patient-msg .illness-img .illness-img-content{
  margin-bottom: 20rpx;
}
.patient-msg .illness-img .img{
  position: relative;
  display: inline-block;
  vertical-align: top;
  margin-right: 36rpx;
  width: 180rpx;
  height: 180rpx;
}
.patient-msg .illness-img .img .btn-cancel{
  position: absolute;
  top: -15rpx;
  right: -17rpx;
  padding: 0;
  width: 36rpx;
	height: 36rpx;
	background-color: #fd6d49;
  border-radius: 50%;
	box-shadow: 0rpx 2rpx 8rpx 0rpx rgba(253, 109, 73, 0.38);
}
.patient-msg .illness-img .img .btn-cancel::before{
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 18rpx;
	height: 4rpx;
	background-color: #f7f7f7;
	border-radius: 1.2rpx; 
}
.patient-msg .illness-img .mr-0{
  margin-right: 0;
}

.patient-msg .illness-img image{
  width: 100%;
  height: 100%;
}
.patient-msg .illness-img .btn-file{
  position: relative;
  display: inline-block;
  vertical-align: top;
  width: 180rpx;
  height: 180rpx;
  background-color: #fff;
  border: 1rpx dashed #e0e0e0;
  border-radius: 4rpx;
  box-sizing: border-box;
}
.patient-msg .illness-img .btn-file::after,.patient-msg .illness-img .btn-file::before{
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 10;
  transform: translate(-50%,-50%);
  border: none;
	border-radius: 1.4rpx;
}
.patient-msg .illness-img .btn-file::after{
  width: 105rpx;
	height: 5rpx;
  background-color: #eeeeee;
}
.patient-msg .illness-img .btn-file::before{
  width: 5rpx;
	height: 105rpx;
  background-color: #eeeeee;
}
.patient-msg .illness-img .illness-img-tips{
  font-size: 24rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0rpx;
	color: #bbbbbb;
}

.price{
  margin-top: 30rpx;
  padding: 0 24rpx;
  background-color: #ffffff;
	border-radius: 14rpx;
}
.price .price-item{
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  font-size: 28rpx;
	font-weight: 400;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #999999;
  border-top: 1rpx solid #eee; 
}
.price .price-item:first-child{
  border: none;
}
.price .price-item .color{
  color: #fd6d49;
}
.price .price-item .ft-bold{
  font-weight: 700;
}
.price .price-item .sign{
  position: absolute;
  right: 80rpx;
  padding: 0 12rpx;
	height: 34rpx;
	background-color: #fd6d49; 
  font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 34rpx;
	letter-spacing: 0rpx;
	color: #f7f7f7;
  text-align: center;
}
.price .price-item .sign::after{
  content: "";
  position: absolute;
  top: 50%;
  right: -10px;
  transform: translate(0,-50%);
  width: 0;
  height: 0;
  border: 5px solid transparent;
  border-left: 5px solid #fd6d49;
}

.btn{
  margin-top: 90rpx;
  padding-bottom: 134rpx;
}
.btn button{
  height: 100rpx;
	background-image: linear-gradient(-90deg, #3b70ff 0%, #52a4ff 100%);
	box-shadow: 0rpx 2rpx 24rpx 0rpx rgba(30, 125, 247, 0.55);
	border-radius: 50rpx;
  font-size: 36rpx;
	font-weight: 700;
	font-stretch: normal;
	line-height: 100rpx;
	letter-spacing: 0px;
	color: #ffffff;
}

.add-patient{
  position: fixed;
  z-index: 1000;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  overflow: hidden;
}
.add-patient-content{
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1001;
  width: 100%;
}
.add-patient navigator{
  margin-top: 8rpx;
  height: 100rpx;
  background-color: #fff;
  font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 100rpx;
	letter-spacing: 0rpx;
	color: #1e7df7;
  text-align: center;
}
.add-patient .title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 120rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  line-height: 120rpx;
}
.add-patient .title button{
  margin: 0;
  padding: 0 30rpx;
  border: none;
  background: none; 
  font-size: 30rpx;
  font-weight: 400;
	font-stretch: normal;
	letter-spacing: 0rpx;
  line-height: 120rpx; 
}
.add-patient .title button::after{
  border: none;
}
.add-patient .title .cancel-btn{
	color: #999999;
}
.add-patient .title .sure-btn{
	color: #1e7df7;
}
.add-patient .title text{
  font-size: 36rpx;
	font-weight: 400;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #000000;
}