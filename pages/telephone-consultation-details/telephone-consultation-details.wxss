page{
  height: 100%;
  background-color: #f7f7f7;
}
.graphic-consultation{
  padding: 30rpx;
}

.patient-msg{
  padding: 0 20rpx;
  background-color: #ffffff;
	border-radius: 14rpx;
}
.patient-msg .patient-name{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  font-size: 28rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 100rpx;
	letter-spacing: 0rpx;
	color: #999999;
}
.patient-msg .patient-name text:last-child{
  position: relative;
  padding-right: 36rpx;
  color: #333;
}

.left-arrow{
  position: relative;
}
.left-arrow:before,.left-arrow:after{
  position: absolute;
  content: '';
  top: 50%;
  transform: translate(0,-50%);
  border-top: 8px transparent dashed;
  border-bottom: 8px transparent dashed;
  border-right: 8px transparent dashed;
  border-left: 8px #fff solid;
}
.left-arrow:before{
  right: -7px;
  border-left: 8px #666666 solid;
}
.left-arrow:after{
  right: -6px; /*覆盖并错开1px*/
  border-left: 8px #fff solid;
}

.add-patient{
  position: fixed;
  z-index: 1000;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  overflow: hidden;
}
.add-patient-content{
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1001;
  width: 100%;
}
.add-patient navigator{
  margin-top: 8rpx;
  height: 100rpx;
  background-color: #fff;
  font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 100rpx;
	letter-spacing: 0rpx;
	color: #1e7df7;
  text-align: center;
}
.add-patient .title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 120rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  line-height: 120rpx;
}
.add-patient .title button{
  margin: 0;
  padding: 0 30rpx;
  border: none;
  background: none; 
  font-size: 30rpx;
  font-weight: 400;
	font-stretch: normal;
	letter-spacing: 0rpx;
  line-height: 120rpx; 
}
.add-patient .title button::after{
  border: none;
}
.add-patient .title .cancel-btn{
	color: #999999;
}
.add-patient .title .sure-btn{
	color: #1e7df7;
}
.add-patient .title text{
  font-size: 36rpx;
	font-weight: 400;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #000000;
}

.time-slot{
  padding-bottom: 40rpx;
  width: 100%;
  border-top: 1rpx solid #eee;
}
.time-slot .time-slot-text{
  padding: 38rpx 0;
  font-size: 32rpx;
	font-weight: 700;
	font-stretch: normal;
	line-height: 48rpx;
	letter-spacing: 0rpx;
	color: #333333;
}
.time-slot .time-slot-list{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 106rpx;
}
.time-slot-list .time-slot-list-item{
  margin-right: 18rpx;
  padding: 0 7rpx;
  height: 106rpx;
  background-color: #f7f7f7;
	border-radius: 8rpx;
  text-align: center;
  line-height: 106rpx;
}
.time-slot-list .time-slot-list-item view{
  display: inline-block;
  vertical-align: middle;
  line-height: 36rpx;
}
.time-slot-list .time-slot-list-item text{
  font-size: 32rpx;
	font-weight: 700;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0rpx;
	color: #666666;
  text-align: center;
}
.time-slot-list .time-slot-list-item text:first-child{
  font-size: 26rpx;
  color: #999;
}

/*剩余时间*/
.time{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 30rpx;
  padding-left: 24rpx;
  height: 170rpx;
	background-color: #ffffff;
	border-radius: 14rpx;
}
.time view{
  font-size: 32rpx;
	font-weight: 700;
	font-stretch: normal;
	line-height: 48rpx;
	letter-spacing: 0rpx;
	color: #333333;
}
.time text{
  color: #1e7df7;
}
.time view:first-child{
  margin-bottom: 24rpx;
}
.time view:first-child text{
  color: #ff9b24;
}

/*通话记录*/
.call-records{
  padding: 0 24px;
  margin-top: 30rpx;
  background-color: #ffffff;
	border-radius: 14rpx;
}
.call-records .title{
  padding: 34rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
	font-weight: 700;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0rpx;
	color: #333333;
}
.call-records .list{
  padding: 18rpx 0 28rpx;
}
.call-records .list-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;  
  font-size: 28rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 64rpx;
	letter-spacing: 0rpx;
	color: #999;
}
.call-records .list-item .accurate-time{
  color: #999;
}
.call-records .list-item .duration{
  color: #333;
}
.call-records .list-item .duration text{
  padding: 0 4rpx;
  color: #ff9b24;
}

/*按钮*/
.btn{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 100rpx;
  margin-bottom: 60px;
}
.btn button{
  margin: 0;
  padding: 0;
  width: 288rpx;
	height: 82rpx;
  border: none;
  border-radius: 41rpx;
  background-image: linear-gradient(-90deg, #3a6fff 0%, #52a3ff 100%);
	box-shadow: 0rpx 3rpx 24rpx 0rpx rgba(59, 114, 255, 0.36);
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 82rpx;
	letter-spacing: 0rpx;
	color: #ffffff;
}
.btn button::after{
  border: none;
}
.btn button:first-child{
  margin-right: 28rpx;
  background-color: #ffffff;
  background-image: none;
	box-shadow: 0rpx 3rpx 16rpx 0rpx rgba(197, 197, 197, 0.2);
  color: #333333;
}