page{
  height: 100%;
  background-color: #f7f7f7;
}
.order-title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 30rpx;
  height: 100rpx;
  background-color: #fff;
  font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 100rpx;
	letter-spacing: 0rpx;
	color: #666666;
}
.order-title .active{
  position: relative;
  color: #1e7df7;
}
.order-title .active::after{
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0rpx;
  transform: translate(-50%,0);
  width: 40rpx;
	height: 4rpx;
	background-color: #1e7df7;
}

.order-list{
  padding: 30rpx 30rpx 160rpx;
}
.order-list-content{
  padding: 35rpx 20rpx;
  background-color: #fff;
  border-radius: 14rpx;
}
.tips{
  font-size: 32rpx;
	font-weight: 700;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0rpx;
	color: #333333;
}
.order-list-details{
  margin-top: 30rpx;
  overflow: hidden;
}
.order-list-item{
  padding: 30rpx 22rpx;
  margin-top: 30rpx;
	background-color: #f7f7f7;
	border-radius: 14rpx;
}
.order-list-item:first-child{
  margin-top: 0;
}
.order-list-item .time{
  font-size: 34rpx;
	font-weight: 700;
	font-stretch: normal;
	line-height: 42rpx;
	letter-spacing: 0rpx;
	color: #333333;
}
.order-list-item .time text{
  color: #ff9e2b;
}
.order-list-item .msg{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 24rpx;
  height: 60rpx;
}
.order-list-item .msg button{
  margin: 0;
  padding: 0;
  width: 150rpx;
	height: 60rpx;
	border-radius: 30rpx;
	border: solid 1rpx #ff5e1f;
  font-size: 28rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 60rpx;
	letter-spacing: 0rpx;
	color: #fd6d49;
}
.order-list-item .msg .disabled{
  border-color: #999;
  color: #999;
}
.order-list-item .msg text{
  font-size: 28rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 60rpx;
	letter-spacing: 0rpx;
	color: #666666;
}

.more{
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  width: 100%;
  height: 100rpx;
}
.more view{
  margin: 0 30rpx;
  height: 100%;
  border-radius: 14rpx;
  background-color: #fff;
  text-align: center;
}
.more text{
  padding-right: 30rpx;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 100rpx;
	letter-spacing: 0rpx;
	color: #666666;
}
.left-arrow{
  position: relative;
}
.left-arrow:before,.left-arrow:after{
  position: absolute;
  content: '';
  top: 50%;
  transform: translate(0,-50%);
  border-top: 7px transparent dashed;
  border-bottom: 7px transparent dashed;
  border-right: 7px transparent dashed;
  border-left: 7px #fff solid;
}
.left-arrow:before{
  right: -7px;
  border-left: 7px #666666 solid;
}
.left-arrow:after{
  right: -6px; /*覆盖并错开1px*/
  border-left: 7px #fff solid;
}


.order-no{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  background-color: #fff;
}
.order-no image{
  width: 320rpx;
  height: 240rpx;
}
.order-no text{
  margin-top: 40rpx;
  font-size: 42rpx;
	font-weight: 700;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0rpx;
	color: #333333;
}
.order-no view{
  margin: 28rpx 0 40rpx;
  font-size: 24rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0rpx;
	color: #999999;
}
.order-no button{
  margin: 0;
  padding: 0;
  width: 288rpx;
	height: 82rpx;
	background-image: linear-gradient(-90deg, #3b71ff 0%, #51a3ff 100%);
	box-shadow: 0rpx 3rpx 24rpx 0rpx rgba(60, 114, 255, 0.36);
	border-radius: 41rpx;
  font-size: 30rpx;
	font-weight: 400;
	font-stretch: normal;
	line-height: 82rpx;
	letter-spacing: 0rpx;
	color: #ffffff;
}